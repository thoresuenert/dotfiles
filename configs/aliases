# Muscle Memory
alias c="clear"

# hemingway
alias hemingway="vim '+Goyo' '+set tw=80' '+set ft=markdown' '+set wrap' '+set linebreak'"

# Git Laziness
alias ga="git add"
alias gb="git branches"
alias gr="git remotes"
alias gs="git status"
# push a local branch to the staging production system
# takes two arguments
# $1 is the remote (e.g. 'origin') 
# $2 is the local branch (e.g. 'maint')
alias stage='function _stage(){ git push -f $1 $2:staging; };_stage'

# Safety First
alias rm="rm -i"

# Navigation
alias ..="cd .."
alias o="open ."

# Lists & Directorys
alias ll="ls -halG"

# Git
alias gitlog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"

# Various
alias error_log="tail -250f /var/log/apache2/error_log"
alias access_log="tail -250f /var/log/apache2/access_log"

#better grep
alias grep="grep --color=always"

# IP addresses
alias ip="curl icanhazip.com"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

#php related
alias phpunit="vendor/bin/phpunit"
