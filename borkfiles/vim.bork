# Check if vim directory exists
ok directory ${HOME}/.vim
ok directory ${HOME}/.vim/bundle

# Check if vundle colorscheme exists
if [[ ! -d ${HOME}/.vim/bundle/Vundle.vim ]]; then
		echo "missing: vundle package manager ~/.vim/bundle/Vundle.vim"
		git clone git@github.com:gmarik/Vundle.vim.git ${HOME}/.vim/bundle/Vundle.vim
		echo "ok: vundle package manager ~/.vim/bundle/Vundle.vim"
else
		echo "ok: vundle package manager ~/.vim/bundle/Vundle.vim"
fi

